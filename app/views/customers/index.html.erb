<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Clientes</h1>

  <%= render 'customers/partials/search_form.html.erb'%>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Rut</th>
        <th>Razón Social</th>
        <th>Giro</th>
        <th>Dirección</th>
        <th>Acciones</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="customer-table">
      <% @customers.each do |customer| %>
        <%= render partial: "customers", locals: { customer: customer }%>
      <% end %>
    </tbody>
  </table>

  <br>
  <div id="paginate">
    <%= paginate @customers, remote: true %>
  </div>
  
</div>